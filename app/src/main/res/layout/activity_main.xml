<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <spbpu.hsamcp.mathgame.GlobalMathView
        android:id="@+id/hello_twf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hello_twf"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:divider="@drawable/divider"
            android:orientation="vertical"
            android:showDividers="middle|beginning|end|none">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <spbpu.hsamcp.mathgame.RuleMathView
                    android:id="@+id/rule0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:substFrom="cos(x)/(1-sin(x))+cos(x)/(1+sin(x))"
                    app:substTo="cos(x)*(1/(1-sin(x))+1/(1+sin(x)))" />
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <spbpu.hsamcp.mathgame.RuleMathView
                    android:id="@+id/rule1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:substFrom="1/(1-sin(x))+1/(1+sin(x))"
                    app:substTo="2/((1-sin(x))*(1+sin(x)))" />
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <spbpu.hsamcp.mathgame.RuleMathView
                    android:id="@+id/rule2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:substFrom="(1-sin(x))*(1+sin(x))"
                    app:substTo="1-sin(x)^2" />
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <spbpu.hsamcp.mathgame.RuleMathView
                    android:id="@+id/rule3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:substFrom="1-sin(x)^2"
                    app:substTo="cos(x)^2" />
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <spbpu.hsamcp.mathgame.RuleMathView
                    android:id="@+id/rule4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:substFrom="cos(x)*(2/(cos(x)^2))"
                    app:substTo="2/cos(x)" />
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>