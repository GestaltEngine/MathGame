<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:behavior_fitToContents="false"
    app:behavior_halfExpandedRatio="0.5"
    app:behavior_expandedOffset="50dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="155dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="140dp"
        android:src="@drawable/dash_res" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:clipToPadding="false"
        android:background="@drawable/bottom_sheet_shape">

        <TableLayout
            android:id="@+id/account_table"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="?attr/shapeBackground"
            android:elevation="7dp"
            android:stretchColumns="*">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/row_clickable"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp">

            <Button
                android:id="@+id/oppo_inst"
                android:tag="oppo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_rect"
                android:longClickable="true"
                android:minWidth="20dp"
                android:onClick="instrumentClick"
                android:stateListAnimator="@animator/button_animator"
                android:text="↹"
                android:textAlignment="center"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace" />
            <Space/>
            <Button
                android:id="@+id/var_inst"
                android:tag="var"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text=":="
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/button_rect"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:onClick="instrumentClick"
                android:stateListAnimator="@animator/button_animator"
                android:longClickable="true"/>
            <Space/>
            <Button
                android:id="@+id/bracket_inst"
                android:tag="bracket"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="()"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/button_rect"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:onClick="instrumentClick"
                android:stateListAnimator="@animator/button_animator"
                android:longClickable="true"/>
            <Space/>
            <Button
                android:id="@+id/permute_inst"
                android:tag="permute"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="⟳"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/button_rect"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:onClick="instrumentClick"
                android:stateListAnimator="@animator/button_animator"
                android:longClickable="true"/>
            <Space/>
            <Button
                android:id="@+id/multi_inst"
                android:tag="multi"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="≡"
                android:textAlignment="center"
                android:layout_weight="1"
                android:background="@drawable/button_rect"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace"
                android:onClick="instrumentClick"
                android:stateListAnimator="@animator/button_animator"
                android:longClickable="true"/>
        </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/rules_msg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="No rules, click somewhere"
            android:textAlignment="center"
            android:background="?attr/shapeBackground"
            android:elevation="7dp"
            android:paddingVertical="8dp"
            android:textColor="?attr/colorPrimary"
            android:textSize="16sp"
            android:typeface="monospace" />

        <ScrollView
            android:id="@+id/rules_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fadeScrollbars="false"
            android:nestedScrollingEnabled="true"
            android:overScrollMode="never"
            android:layout_weight="1"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarSize="12dp"
            android:scrollbarStyle="outsideInset"
            android:paddingHorizontal="5dp"
            android:scrollbarThumbVertical="@drawable/alert_shape"
            android:scrollbars="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:id="@+id/rules_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="?attr/dividerColor"
                android:orientation="vertical"
                android:showDividers="middle|beginning|end|none" />
        </ScrollView>

        <ScrollView
            android:id="@+id/instrument_handle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:nestedScrollingEnabled="true"
            android:layout_weight="1"
            android:scrollbarStyle="outsideInset"
            android:paddingHorizontal="2dp"
            android:scrollbarThumbVertical="@drawable/alert_shape"
            android:scrollbars="vertical"
            android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clipToPadding="false">
            <TextView
                android:id="@+id/inst_step_detail_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/shapeBackground"
                android:elevation="3dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:text="1. Detail instrument"
                android:textColor="@color/text_disableable"
                android:textSize="14sp"
                android:typeface="monospace" />

        <HorizontalScrollView
            android:id="@+id/inst_step_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/shapeBackground"
            android:scrollbarThumbHorizontal="@drawable/alert_shape">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/row_clickable"
                android:paddingVertical="8dp"
                android:paddingHorizontal="8dp"
                android:stretchColumns="*">
                <Button
                    android:id="@+id/oppo_inst_plus_minus"
                    android:tag="plus_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_rect"
                    android:longClickable="true"
                    android:minWidth="50dp"
                    android:onClick="detailClick"
                    android:stateListAnimator="@animator/button_animator"
                    android:text="+-"
                    android:textAlignment="center"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
                <Space android:layout_width="10dp"/>
                <Button
                    android:id="@+id/oppo_inst_minus_plus"
                    android:tag="minus_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_rect"
                    android:longClickable="true"
                    android:minWidth="50dp"
                    android:onClick="detailClick"
                    android:stateListAnimator="@animator/button_animator"
                    android:text="-+"
                    android:textAlignment="center"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
                <Space android:layout_width="10dp"/>
                <Button
                    android:id="@+id/oppo_inst_mult_div"
                    android:tag="mult_div"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_rect"
                    android:longClickable="true"
                    android:minWidth="50dp"
                    android:onClick="detailClick"
                    android:stateListAnimator="@animator/button_animator"
                    android:text="*/"
                    android:textAlignment="center"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
                <Space android:layout_width="10dp"/>
                <Button
                    android:id="@+id/oppo_inst_div_mult"
                    android:tag="div_mult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_rect"
                    android:longClickable="true"
                    android:minWidth="50dp"
                    android:onClick="detailClick"
                    android:stateListAnimator="@animator/button_animator"
                    android:text="/*"
                    android:textAlignment="center"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
                <Space android:layout_width="10dp"/>
                <Button
                    android:id="@+id/oppo_inst_pow_root"
                    android:tag="pow_root"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_rect"
                    android:longClickable="true"
                    android:minWidth="50dp"
                    android:onClick="detailClick"
                    android:stateListAnimator="@animator/button_animator"
                    android:text="^√"
                    android:textAlignment="center"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
                <Space android:layout_width="10dp"/>
                <Button
                    android:id="@+id/oppo_inst_root_pow"
                    android:tag="root_pow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_rect"
                    android:longClickable="true"
                    android:minWidth="50dp"
                    android:onClick="detailClick"
                    android:stateListAnimator="@animator/button_animator"
                    android:text="√^"
                    android:textAlignment="center"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
                <Space android:layout_width="10dp"/>
                <Button
                    android:id="@+id/oppo_inst_log_pow"
                    android:tag="log_pow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_rect"
                    android:longClickable="true"
                    android:minWidth="50dp"
                    android:textAllCaps="false"
                    android:onClick="detailClick"
                    android:stateListAnimator="@animator/button_animator"
                    android:text="log^"
                    android:textAlignment="center"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
                <Space android:layout_width="10dp"/>
                <Button
                    android:id="@+id/oppo_inst_pow_log"
                    android:tag="pow_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_rect"
                    android:longClickable="true"
                    android:minWidth="50dp"
                    android:textAllCaps="false"
                    android:onClick="detailClick"
                    android:stateListAnimator="@animator/button_animator"
                    android:text="^log"
                    android:textAlignment="center"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="monospace" />
                <Space/>
            </TableRow>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/inst_step_place_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. Choose place from expression"
            android:background="?attr/shapeBackground"
            android:elevation="3dp"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            android:textColor="@color/text_disableable"
            android:textSize="14sp"
            android:typeface="monospace" />

        <HorizontalScrollView
            android:id="@+id/inst_step_place_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:duplicateParentState="false"
            android:fillViewport="true"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="horizontal"
            android:layout_gravity="center_horizontal">
            <mathhelper.games.matify.common.SimpleMathView
                android:id="@+id/inst_step_place"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginBottom="0dp"
                android:includeFontPadding="false" />
        </HorizontalScrollView>

            <TextView
                android:id="@+id/inst_step_param_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/shapeBackground"
                android:elevation="3dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp"
                android:text="3. Enter param or choose from expression"
                android:textColor="@color/text_disableable"
                android:textSize="14sp"
                android:typeface="monospace" />

            <HorizontalScrollView
                android:id="@+id/inst_step_param_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:duplicateParentState="false"
                android:fadeScrollbars="true"
                android:fillViewport="true"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="horizontal"
                android:layout_gravity="center_horizontal">
                <mathhelper.games.matify.common.SimpleMathView
                    android:id="@+id/inst_step_param"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginBottom="0dp"
                    android:includeFontPadding="false" />
            </HorizontalScrollView>

            <TableLayout
                android:id="@+id/inst_step_param_keyboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/row_clickable"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:text="5"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:text="6"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:text="7"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:text="8"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:text="9"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:tag="delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:text="⬅"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/row_clickable"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:text="2"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:text="3"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:text="4"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:tag="point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:text="."
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:typeface="monospace" />
                </TableRow>
                <TableRow
                    android:id="@+id/latin_row"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/row_clickable"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:textAllCaps="false"
                        android:text="a"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:textAllCaps="false"
                        android:text="b"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:textAllCaps="false"
                        android:text="c"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:textAllCaps="false"
                        android:text="i"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:textAllCaps="false"
                        android:text="j"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="18sp"
                        android:typeface="monospace" />
                    <Space/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/button_rect"
                        android:minWidth="50dp"
                        android:onClick="keyboardClick"
                        android:stateListAnimator="@animator/button_animator"
                        android:textAllCaps="false"
                        android:text="k"
                        android:textAlignment="center"
                        android:textColor="?attr/colorPrimary"
